<% layout('layout/page') -%>

<div class="jumbotron">
  <h1>Tasks</h1>
  <p><%=user.username%> tasks:</p>
  <% if (tasks) { %>
    <ul>
    <% for(var i=0; i<tasks.length; i++) {%>
       <li><%= tasks[i].content %></li>
    <% } %>
    </ul>
  <% } %>
  <form class="form-inline" action="/task" method="POST">
    <div class="form-group">
      <input type="text" class="form-control" id="exampleInputTask2" placeholder="Your task" required>
    </div>
    <button type="submit" class="btn btn-default">Add</button>
  </form>
</div>